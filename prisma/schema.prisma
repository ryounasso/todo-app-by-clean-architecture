generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  createdAt DateTime @default(now())
  Todo      Todo[]
}

model Todo {
  id         Int       @id @default(autoincrement())
  userId     Int
  title      String
  createdAt  DateTime  @default(now())
  finishedAt DateTime?
  status     String    @default("ready")
  User       User      @relation(fields: [userId], references: [id])
}
